<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
  </head>
  <body>
    <h1>Home page</h1>
    <table border="1">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Action</th>
        </tr>
      </thead>
      <% todos.forEach(todo => { %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.desc %></td>
        <td>
          <form action="#" method="post">
            <button>Delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </table>
    <a href="./about">about page</a>
  </body>
</html>
